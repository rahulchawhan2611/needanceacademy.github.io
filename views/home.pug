extends base.pug
block scripts
  script(src='/static/index.js')
block style 
    style
      include ../static/style.css

block content
    section#introSection
        div Welcome To Neelam Dance Academy
        div.small Live Learn Dance Repeat
    section#missionSection
        h2 Our Mission
        div.card
            h3 Dance Perfection
            div.card-box
                div.card-img
                    img(src="/static/img/1.png")
                div.card-content
                    p Our mission is to provide children from across the globe
        div.card
            h3 Dance the way you like
            div.card-box
                div.card-img
                    img(src="/static/img/2.png")
                div.card-content
                    p To train students by promoting skill development
        div.card
            h3 Expert Teaching
            div.card-box
                div.card-img
                    img(src="/static/img/3.png")
                div.card-content
                    p To train students with the help of experts
    section#sponsorsSection
        h2 Our Sponsors 
        div#sponsers
            img(src="/static/img/logo1.png", alt="Sponser image", class="sp-image")
            img(src="/static/img/logo2.png", alt="Sponser image", class="sp-image")
            img(src="/static/img/logo3.png", alt="Sponser image", class="sp-image")
            img(src="/static/img/logo4.png", alt="Sponser image", class="sp-image")